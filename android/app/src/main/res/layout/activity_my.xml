<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:paddingRight="12dp"
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:text="Display Endpoint" />

        <EditText
            android:paddingLeft="8dp"
            android:id="@+id/displayEndpoint"
            android:background="@drawable/edit_text_c"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:hint="Display Endpoint" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView4"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"
            android:text="Tracking Endpoint" />
    <EditText
        android:id="@+id/trackingEndpoint"
        android:background="@drawable/edit_text_c"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:paddingLeft="8dp"
        android:hint="Tracking Endpoint"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"
        android:text="slots" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/aft"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="af" />

        <EditText
            android:paddingLeft="8dp"
            android:id="@+id/af"
            android:background="@drawable/edit_text_c"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="af"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idt"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="id" />

        <EditText
            android:paddingLeft="8dp"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:background="@drawable/edit_text_c"
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:hint="id"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/iut"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:text="iu" />

        <EditText
            android:id="@+id/iu"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text_c"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:hint="iu"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="1dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/szt"
            android:paddingRight="12dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sz" />

        <EditText
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text_c"
            android:id="@+id/sz"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:hint="sz"/>
    </LinearLayout>
    <TextView
        android:id="@+id/opt"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="optional_param" />


    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cpt"
            android:paddingRight="12dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="optional_params" />

        <EditText
            android:paddingLeft="20dp"
            android:background="@drawable/edit_text_c"
            android:textColor="@android:color/white"
            android:id="@+id/optional_param"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:maxLines="5"
            android:hint="optional_params"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        />
    <Button
        android:id="@+id/submit"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:text="Submit"
        android:background="@drawable/button_c"
        />

</LinearLayout>
</ScrollView>
